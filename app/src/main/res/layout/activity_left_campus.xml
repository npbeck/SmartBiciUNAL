<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LeftCampusActivity">

    <TextView
        android:id="@+id/leftCampusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="@string/su_bicicleta_sali_del_campus_de_la_universidad_nacional_de_colombia_sede_bogot_por_la_puerta_xx_gracias_por_usar_smartbiciunal"
        />

    <Button
        android:id="@+id/confirmHavingLeftCampusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listo"
        android:layout_gravity="center_horizontal" />
</LinearLayout>